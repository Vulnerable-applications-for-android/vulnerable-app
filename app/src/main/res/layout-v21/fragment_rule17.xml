<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rule17.Rule17Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_rule17_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rule17_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/menu_rule17"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/analogous_rule2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:text="( Analogous to Rule2 )"
                android:textSize="18sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/description_rule17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="fill_horizontal"
                android:text="@string/rule17_description"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/rule17_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="25dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_rule17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:hint="Type the secret to save in the provider..."
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/button_rule17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Save Secret"
                    android:textColor="@color/White"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/provider_rule17_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/query_button_rule17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Query Secrets"
                        android:textColor="@color/White"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/delete_button_rule17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Delete Secrets"
                        android:textColor="@color/White"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rule17_query_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content Provider Data"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:background="@drawable/borderbottom"/>

                <TextView
                    android:id="@+id/tv_query_result_rule17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="fill_horizontal"
                    android:text=""
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_hide_rule17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Hide"
                    android:textColor="@color/White"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>