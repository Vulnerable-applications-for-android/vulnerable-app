<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rule20.Rule20Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_rule2_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rule20_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/menu_rule20"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/description_rule20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="fill_horizontal"
                android:text="@string/rule20_description"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/rule20_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="25dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

<!--                <EditText-->
<!--                    android:id="@+id/et_rule2"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:gravity="top|start"-->
<!--                    android:hint="Type the secret to save in the provider..."-->
<!--                    android:imeOptions="actionDone"-->
<!--                    android:inputType="text"-->
<!--                    android:lines="1"-->
<!--                    android:maxLines="1"-->
<!--                    android:textSize="16sp"-->
<!--                    android:visibility="visible" />-->

                <LinearLayout
                    android:id="@+id/provider_rule20_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/start_button_rule20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_margin="5dp"
                        android:text="Start Service"
                        android:padding="10dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/White"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/stop_button_rule20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@color/colorPrimary"
                        android:text="Stop Service"
                        android:textColor="@color/White"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_result_rule20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="fill_horizontal"
                    android:text=""
                    android:textSize="18sp" />

<!--                <Button-->
<!--                    android:id="@+id/button_hide_rule2"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                    android:layout_marginBottom="20dp"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:backgroundTint="@color/colorPrimary"-->
<!--                    android:padding="10dp"-->
<!--                    android:background="@color/colorPrimary"-->
<!--                    android:text="Hide"-->
<!--                    android:textColor="@color/White"-->
<!--                    android:textSize="16sp"-->
<!--                    android:visibility="invisible" />-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>